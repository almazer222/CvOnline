@page
@model CvOnline.MVC.Pages.LoginModel
@{
}

<body>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <form role="form" method="post">
                        <fieldset>
                            <p class="text-uppercase"> Login using your account: </p>

                            <div class="form-group">
                                <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email address" asp-for=Authenticate.Email required>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" asp-for=Authenticate.Password required>
                            </div>
                            <div>
                                <input type="submit" class="btn btn-md" value="Sign In">
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>